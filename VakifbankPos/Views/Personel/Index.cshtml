@model IEnumerable<VakifbankPos.DAL.Entities.PosReceiver>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container mt-5">
        <h3 class="mb-4 text-center" style="color: #f1c40f; float:left">Personeller</h3>

        <div class="mb-4">
            <a href="@Url.Action("CreatePersonel", "Personel")"  style="float:right"class="btn btn-vakifbank-primary">
                <i class="bi bi-plus"></i> Yeni Personel Girişi
            </a>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Resim</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Sicil Numarası</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" alt="Personel Resmi" style="height:50px; width:50px;" /></td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.IdentificationNumber</td>
                        <td>
                            <a href="@Url.Action("DeletePersonel", new { id = item.PosReceiverId })" class="btn btn-vakifbank-danger btn-sm" data-bs-toggle="tooltip" title="Sil">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a href="@Url.Action("UpdatePersonel", new { id = item.PosReceiverId })" class="btn btn-vakifbank-warning btn-sm" data-bs-toggle="tooltip" title="Düzenle">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script>$(function () {
                $('[data-bs-toggle="tooltip"]').tooltip();
            });</script>
    </div>
</body>

<style>
    .container {
        margin-top: 20px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
    }

    

    .table thead {
        background-color: #333; 
        color: #f7e04b; 
    }
</style>